
<div id="container">
  <div class="welcome">
    <h3> Read an Article - Get Smarter - Carry on </h3>
    <p>____________________________________________________________________________________________________________________________________
    </p>
  </div>

  <!-- Listing the posts -->
  <% @posts.each do |post| %>
    <div class="post">
   
      <h1 class="title">  
        <%= post.title %>
      </h1>

      <p class="author">
        <b>by:</b>
        <%= post.author %>
      </p>

      <p>
        <b>See the full aritcle @ 
        <%= link_to post.url, post.url, :target => "_blank" %>
        </b>
      </p>

      <p class="preview"> 
        <%= post.preview %>
      </p>

      <p>
        <b>Date posted:</b>
        <%= post.date_posted %>
      </p>

      <!-- if user signed in Add post to favorite reads -->
      <% if current_user %>
        <% if current_user.favorites.collect(&:post_id).include? post.id %>
          <div class="inreads">
            <p><b>In My Reads</b></p>
          </div>
        <% elsif %>
          <%= form_for :favorites, :url => favorites_path do |f| %>
            <%= f.hidden_field :post_id, :value => post.id %>
            <%= button_tag(type: 'submit', class: "btn btn-link") do %>
              <i class="icon-plus-sign icon-white icon-2x"></i>
            <% end %>
          <% end %>
        <% end %>
      <!-- If not signed in, ask to register -->
      <% else %>
        <div class="registernow">
          <b><%= link_to 'Register now to add this post to your reading list', new_user_registration_path %></b>
        </div>
      <% end %> 
  
      <!-- if current user admin alow to edit -->
      <% if current_user.try(:admin?) %>
        <%= link_to 'Edit', edit_post_path(post) %>           
      <% end %>
      <div class="divimg"> 
        ___________________________________________________________ 
      </div> 
    </div>   
  <% end %>
  <div class="paginate">
    <%= will_paginate @posts %>
  </div>
</div>

